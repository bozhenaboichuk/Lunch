%article.card.hover:bg-gray-100{id: dom_id(dish)}
  %section.mb-4
    .block
      = image_tag dish.picture || '', size: '150x150'
  %section.mb-4
    .block.text-cyan-700.mb-2
      = dish.name
    .block.mb-2
      = dish.describe
    .block.mb-2
      Ціна:
      = dish.price
      грн
    .block
      Вага:
      = dish.weight
      г
  %section
    .flex
      - if user_signed_in?
        = button_to 'Вибрати', line_items_path(dish_id: dish), class: 'btn'
