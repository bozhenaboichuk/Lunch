%div.text-center
  %h1.heading-1
    Меню
= form_with model: [@restaurant, @dish] do |f|
  %label.text-xl.text-cyan-700
    = f.label :name
    %br/
  = f.text_area :name, class: "form-control"
  %br/
  = f.label :describe
  %br/
  = f.text_area :describe, class: "form-control"
  %br/
  = f.label :price
  %br/
  = f.text_area :price, class: "form-control"
  %br/
  = f.label :weight
  %br/
  = f.text_area :weight, class: "form-control"
  %br/
  = f.label :avatar
  %br/
  = f.file_field :avatar, class: "form-control"
  %br/
  = f.label :dish_type
  %br/
  = f.collection_select :dish_type_id, DishType.all, :id, :name
  %br/
  = f.submit "Зберегти"
- unless user_signed_in?
  .flex
    = link_to 'Log in to order food', new_user_session_path, class: 'btn'

- @types.all.each do |type|
  - @dishes = @restaurant.dishes.where dish_type: type
  - unless @dishes.empty?
    %h2.heading-2.my-8
      = type.name
  .grid.s5:grid-cols-6.s4:grid-cols-5.gap-4.s3:grid-cols-4.s2:grid-cols-3.s1:grid-cols-2.grid-cols-1.justify-center.items-center.flex
    = render @dishes
