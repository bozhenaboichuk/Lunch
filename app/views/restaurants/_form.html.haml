= render 'shared/errors', object: @restaurant

.text-center.font-nav
  = form_with model: @restaurant do |f|
    .lable-add
      = f.label :name
      %br/
    = f.text_area :name, class: "form-control"
    %br/
    .lable-add
      = f.label :phone_number
      %br/
    = f.text_area :phone_number, class: "form-control"
    %br/
    .lable-add
      = f.label :address
      %br/
    = f.text_area :address, class: "form-control"
    %br/
    .lable-add
      = f.label :picture
      %br/
    = f.file_field :picture, class: "form-control"
    %br/
    = f.submit class:"form-btn mt-2"
