!!!
%html.h-full
  %head
    %title Lunch
    %meta{name: "viewport", content: "width=device-width,initial-scale=1"}
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload"
    = javascript_importmap_tags


    %body
      %header.p-4.border-b.sticky.bg-white.top-0.z-10.absolute.font-nav.text-2xl.min-h-20.m-0
        %nav.flex.justify-between.text-black
          = link_to (image_tag 'LUNCH.png', width:"150px"), root_path
          -# = link_to image_tag( 'Lunch.png'), root_path
          -# .ui.medium.image
          -# %image{:alt => "", :src => "asset_path('Lunch.png')}"}
          -# %img(src="Lunch.png")
          -# = image_tag('images/Lunch', class:"img-responsive img-circle")
      %main.bg-gray-100.pb-24.p-8
        - if notice
          .flex.align-center.mb-5
            .notice
              = notice
        - if alert
          .flex.align-center.mb-5
            .alert
              = alert

        = yield

      %footer.styles-footer
        &copy;
        = "Copyrignt #{Time.now.year} LUNCH"
