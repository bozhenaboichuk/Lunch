<div class=" inset-x-0 bottom-0 bg-gray-100 my-4">
    <div class="w-full min-h-full max-w-xs m-auto bg-gray-200  rounded p-5">
      <h2 class="text-3xl mb-4 font-medium text-center text-black ">Edit <%= resource_name.to_s.humanize %></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field block mb-2 text-gray-600">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:'form' %>
        </div>

        <div class="field block mb-2 text-gray-600">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:'form' %>
        </div>

        <div class="field block mb-2 text-gray-600">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class:'form' %>
        </div>

        <div class="field block mb-2 text-gray-600">
          <%= f.label :avatar %><br />
          <%= image_tag(resource.avatar.url, size: '50x50') if resource.avatar.url.present? %>
        </div>

        <div class="field block mb-2 text-gray-600">
          <%= f.file_field :avatar , class:'form'%>
        </div>

        <div class="field block mb-2 text-gray-600">
          <%= f.label :phone_number %><br />
          <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class:'form' %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field block mb-2 text-gray-600 text-base">
          <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "new-password", class:'form' %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="field block mb-2 text-gray-600">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form' %>
        </div>

        <div class="field block mb-2 text-gray-600>
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class:'form' %>
        </div>

        <div class="actions">
          <%= f.submit "Update", class:'form-btn inline-block' %>
          <%= button_to "Cancel account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:'form-btn inline-block' %>
          <%= link_to "Back", :back , class:'form-btn mt-1 inline-block' %>
        </div>
      <% end %>
