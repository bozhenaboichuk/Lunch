.inset-x-0.bottom-0.bg-white
  = button_to t('helpers.users.cancel_account'), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:'form-btn mt-2 ml-6'
  %br/
  = link_to t('helpers.users.back'), :back , class:'form-btn ml-6'
  .w-full.max-w-xs.m-auto.bg-gray-100.rounded.p-5
    %h2.text-3xl.mb-4.font-medium.text-center.text-black
      = t('.heading')
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = render "users/shared/error_messages", resource: resource
      .field.block.mb-2.text-gray-600
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email" , class:'form'
      .field.block.mb-2.text-gray-600
        = f.label :first_name
        %br/
        = f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:'form'
      .field.block.mb-2.text-gray-600
        = f.label :last_name
        %br/
        = f.text_field :last_name, autofocus: true, autocomplete: "last_name", class:'form'
      .field.block.mb-2.text-gray-600
        = f.label :avatar
        %br/
        = image_tag(resource.avatar.url) if resource.avatar.url.present?
      .field.block.mb-2.text-gray-600
        = f.file_field :avatar , class:'form'
      .field.block.mb-2.text-gray-600
        = f.label :phone_number
        %br/
        = f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class:'form'
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      .field.block.mb-2.text-gray-600.text-base
        = f.label :password
        %i
          = t('.leave blank')
        %br/
        = f.password_field :password, autocomplete: "new-password", class:'form'
        - if @minimum_password_length
          %br/
          %em
            = @minimum_password_length
            = t('.characters minimum')
      .field.block.mb-2.text-gray-600
        = f.label :locale
        = f.select :locale, %w(uk en), {}, { class: 'form mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' }
      .field.block.mb-2.text-gray-600
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: 'new-password', class:'form'
      .field.block.mb-2{:class => "text-gray-600>"}
      = f.label :current_password
      %i
        = t('.need_current_password')
      %br/
      = f.password_field :current_password, autocomplete: 'current-password', class:'form'
      .actions
        = f.submit t('helpers.users.update'), class:'form-btn'
