.flex.justify-center
  .text-black.font-nav.text-2xl.card.w-fit.max-w-md
    .flex.justify-center
      - if current_user.avatar.url.present?
        = image_tag(current_user.avatar.url, size: '200x300')
      - else
        = image_tag('default.jpg', size: '200x300')
    .block.text-center
      Ім'я:
      = @user.first_name
    .block.text-center
      Прізвище:
      = @user.last_name
    .block.text-center
      E-mail:
      = @user.email
    .block.text-center
      Телефон:
      = @user.phone_number
    .block.flex.justify-center
      %button.form-btn.flex.justify-center.mt-3
        = link_to "Update".html_safe, edit_user_registration_path
