.min-h-users
  - @users.each do |user|
    .inline-block.m-5.text-black.font-nav.text-2xl
      .block.flex.justify-center
        - if user.avatar.url.present?
          = image_tag(user.avatar.url, size: '150x150')
        - else
          = image_tag('default.jpg', size: '150x150')
      .block.text-center
        = t('.user_first_name')
        = user.first_name
      .block.text-center
        = t('.e_mail')
        = user.email
      .block.text-center
        = t('.user_role')
        = user.role
      %section.flex.justify-center
        - if policy(user).update?
          = link_to t('.delete'), admin_user_path(user), data: {'turbo-method': :delete}, class: 'form-btn'
        - if policy(user).destroy?
          = link_to t('.change'), admin_user_path(user), data: {'turbo-method': :patch}, class: 'form-btn ml-3'
